
//- A mixin for creating a new event

mixin event(admin)
	if admin
		h3 Create New Event
		//- div.infobox
		div.event-new.infobox
			div.dash
			//- div.plus.do_createEvent

			div.event-new-container 
				div.image
				div.edit-area.title 
					input(type="text" placeholder="Title:" name="title")
				div.edit-area.speaker
					input(type="text" placeholder="Speaker:" name="speaker")
				div.edit-area.type
					input(type="text" placeholder="Type:" name="type")
				div.edit-area.date
					input(type="text" placeholder="Select a date" name="date")
					input(type="text" placeholder="Type in a address" name="address")
				div.edit-area.description
					textarea(type="text" placeholder="Description:" name="description" rows="4")
			div.button.do_createEvent(contenteditable="false") Create
	

	div.event-list
	


	//-Templates 
	script(id='template-eventlist-item',type='text/html')
		| <div class='event infobox' data-eventId=<%=eventId%>  data-index=<%=index%>>
		|	<% if (admin) {%>
		| 		<div class='dash do_deleteEvent'></div>
		|	<%}%>
		|	<div class='event-container'  >
		|		<%=eventData %>	
		|	</div>
		| </div>