/**
 * CSS for events page
 */
#events
	.dash
		float right
		width: 11px;
		height: 3px;
		background: url(/img/default-template/list-dash.png) 3px 8px;
	.plus
		display none
		float right
		width: 11px;
		height: 11px;
		background: url(/img/default-template/list-plus.png) 11px 11px;

	.event-new
		.dash
			display none
		
		.event-new-container
			input
				font-size 15px

			textarea, input
				width 95%
				margin-bottom 10px
			.date
				input[name='date']
					width 40%
					float left
				input[name='address']
					width 40%
					float right			

